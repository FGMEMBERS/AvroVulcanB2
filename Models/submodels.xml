<?xml version="1.0"?>

<PropertyList>

  <!-- Black Buck 1 bombs -->
  <submodel>
    <name>bomb</name>
    <model>Aircraft/vulcanb2/Models/bomb-released.xml</model>
    <trigger>/controls/armament/triggerbomb</trigger>
    <speed>0</speed>
    <repeat>true</repeat>
    <delay>0.5</delay>
    <count>21</count>
    <x-offset>-60.0</x-offset>
    <y-offset>0</y-offset>
    <z-offset>-0.5</z-offset>
    <yaw-offset>0.0</yaw-offset>
    <pitch-offset>0.0</pitch-offset>
    <eda>3.00</eda>
    <cd>0.1</cd>
    <!-- less than a bullet but more than a tank -->
    <weight>1000</weight>
    <contents>/sim/armament/contents</contents>
    <life>60</life>
    <buoyancy>0</buoyancy>
    <wind>false</wind>
    <aero-stabilised>true</aero-stabilised>
    <impact>true</impact>
    <impact-reports>/sim/armament/weapons/bomb</impact-reports>
  </submodel>

