<?xml version="1.0"?>

<!-- Radar Altimeter -->

<PropertyList>

 <path>radar-altimeter.ac</path>

<!-- Radar Altimeter -->

 <!-- Needle 500ft sensitivity-->
 <animation>
  <type>rotate</type>
  <object-name>needle</object-name>
  <property>instrumentation/radar-altimeter/radar-altitude-lowpass-ft</property>
  
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center> 
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
  <condition>
    <and>
      <equals>
        <property>instrumentation/radar-altimeter/serviceable</property>
        <value>true</value>
      </equals>
      <equals>
        <property>/controls/radar/sensitivity-five-thousand</property>
        <value>false</value>
      </equals>
    </and>
  </condition>
  <factor>0.63</factor>
  <min>0</min>
  <max>315</max>
</animation>

<!-- Needle 5000ft sensitivity -->
 <animation>
   <type>rotate</type>
   <object-name>needle</object-name>
   <property>instrumentation/radar-altimeter/radar-altitude-lowpass-ft</property>
   
   <center>
     <x-m>0</x-m>
     <y-m>0</y-m>
     <z-m>0</z-m>
   </center>
   <axis>
     <x>-1</x>
     <y>0</y>
     <z>0</z>
   </axis>
   <condition>
     <and>
       <equals>
         <property>instrumentation/radar-altimeter/serviceable</property>
         <value>true</value>
       </equals>
       <equals>
         <property>/controls/radar/sensitivity-five-thousand</property>
         <value>true</value>
       </equals>
     </and>
   </condition>
   <factor>0.063</factor>
   <min>0</min>
   <max>315</max>
 </animation>

<!-- *** LoD *** -->
 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>5</max-m>
 </animation> 

</PropertyList>
