<PropertyList>

<path>markers.ac</path>

  <effect>
    <condition>
      <greater-than>
	<property>sim/version/flightgear</property>
	<value>3.4.999</value>
      </greater-than>
    </condition>
    <inherits-from>Aircraft/AvroVulcanB2/Models/Effects/interior-shadow/vulcanb2-interior</inherits-from>
    <object-name>Imrkr</object-name>
    <object-name>Marker.pnl</object-name>
    <object-name>Mmrkr</object-name>
    <object-name>Mrkr.off</object-name>
    <object-name>Omrkr</object-name>
  </effect>

    <animation>
        <type>select</type>
        <object-name>Omrkr</object-name>
        <condition>
            <property>instrumentation/marker-beacon/outer</property>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>Mmrkr</object-name>
        <condition>
            <property>instrumentation/marker-beacon/middle</property>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>Imrkr</object-name>
        <condition>
            <property>instrumentation/marker-beacon/inner</property>
        </condition>
    </animation>

</PropertyList>
